/**index.wxss**/

.container {
  padding-top: 10rpx;
  /* background: #eee; */
  padding: 20rpx 3%;
}
.userinfo {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.userinfo-nickname {
  font-size: 32rpx;
}
.content button {
  width: 500rpx;
  margin: 60rpx auto;
}
.box {
  box-sizing: border-box;
  display: inline-block;
  width: 48%;
  height: 100%;
  padding: 20rpx;
  margin-bottom: 4%;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background: #91b1ff;
}
.box:nth-child(2n + 1) {
  margin-right: 4%;
}
.icon-image {
  width: 160rpx;
  height: 160rpx;
}
.tips {
  font-size: 20rpx;
}
.on-tap {
  background: #7299f8;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  transform: translate(4px, 4px);
}
