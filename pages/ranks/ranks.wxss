.ranks {
  font-size: 28rpx;
}
.ranks .item-box {
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #eee;
}
.ranks .rank-item {
  flex: 1;
  text-align: center;
}
.ranks .is-new {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: -10rpx;
  top: -10rpx;
}
.ranks .image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  background: #ccc;
  vertical-align: middle;
  margin-right: 40rpx;
}
.ranks .info {
  flex: 2;
  text-align: left;
}
.ranks .image-box {
  position: relative;
}
.ranks .info-box {
  display: flex;
  height: 140rpx;
  padding: 60rpx 0;
  background: #ff777c;
  font-size: 38rpx;
  font-weight: 600;
}
.ranks .rank-icon {
  width: 54rpx;
  height: 54rpx;
  vertical-align: middle;
}
.ranks .info-box .info-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  background: #ccc;
  vertical-align: middle;
}
.ranks .nickName {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ranks .info-box .item {
  flex: 1;
  text-align: center;
  height: 140rpx;
  line-height: 140rpx;
}
/*  加载更多   */
.loading-icon {
  margin: 0 5rpx;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent
    url(data:image/svg+xml;base64,)
    no-repeat;
  background-size: 100%;
}
.loading-content,
.loading-all {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}
.loading-text {
  display: inline-block;
  vertical-align: middle;
}
