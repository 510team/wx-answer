.ranks .item-box {
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #ccc;
}
.ranks .rank-item {
  flex: 1;
  text-align: center;
}
.ranks .image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  background: #ccc;
  vertical-align: middle;
  margin-right: 40rpx;
}
.ranks .info {
  flex: 2;
  text-align: left;
}
