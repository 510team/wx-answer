<view class="answers">
    <image src="../../assets/image/index_bg@2x.png" class="container-bg"></image>
    <view class="alarm">
        倒计时：
        <text>{{countdown}}</text>
    </view>
    <view class="questions-box">
        <view class="question">
            <text class="title" id="{{answerItem.id}}">
                {{answerItem.id+"、"}}女友问：{{answerItem.title}}你如何作答：
            </text>
            <view class="answer-box" wx:for="{{answerItem.items}}" wx:key="*this">
                <image class="icon" src="../../assets/image/list_icon.png" />
                <button class="{{curKey==item.key?'cur-btn':''}}" data-key="{{item.key}}" bindtap="onTapCheck" hover-class='btn_hover' disabled="{{answerItem.disabled}}" plain>
                    {{item.value}}
                </button>
            </view>
        </view>
    </view>
