.answers {
  padding: 0 5%;
  font-size: 12px;
  position: relative;
}
.alarm {
  position: absolute;
  top: 20px;
  right: 20px;
  height: 32px;
  line-height: 32px;
  padding: 0 20px;
  border-radius: 20px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  z-index: 100;
}
.questions-box {
  padding-top: 72px;
}
.question {
  line-height: 24px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  padding: 20px;
  font-size: 14px;
}
.answer-box {
  margin-top: 10px;
}
.answer-box button {
  display: block;
  line-height: 30px;
  width: 100%;
  /* margin-left: 10%; */
  text-align: center;
  margin-bottom: 10px;
  font-size: 14px;
  background: none;
  border: 1px solid #5ca05f;
  margin-bottom: 10px;
  /* border-radius: 0px; */
}
/* 去掉默认边框 */
.btn::after {
  border: 0;
}
.answer-box button.btn_hover,
.answer-box .cur-btn {
  background: #5ca05f;
  color: #fff;
}
