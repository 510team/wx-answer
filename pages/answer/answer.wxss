.answers {
  padding: 0 5%;
  font-size: 12px;
  position: relative;
}
.alarm {
  position: absolute;
  top: 20px;
  right: 20px;
  height: 32px;
  line-height: 32px;
  padding: 0 20px;
  border-radius: 20px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  z-index: 100;
}
.questions-box {
  padding-top: 72px;
}
.radio-group {
  margin-top: 5px;
}
.question {
  line-height: 24px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  padding: 20px;
  font-size: 14px;
}
.radio {
  display: block;
}
