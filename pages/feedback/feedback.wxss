.feedback {
  background: #91b1ff;
}
.feedback textarea {
  width: 90%;
  height: 300rpx;
  margin: 20rpx auto;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.8);
}
.feedback .btn-area {
  margin: 20rpx auto;
}

.feedback .submit-btn {
  width: 710rpx;
  margin-top: 20px;
}

.feedback .about-us {
  box-sizing: border-box;
  text-align: center;
  background: rgba(255, 255, 255, 0.8);
  width: 94%;
  margin: 40rpx auto 0;
  padding-bottom: 10px;
  border-radius: 20rpx;
}

.feedback .title {
  padding: 20rpx;
  font-size: 26rpx;
}

.feedback .about-us .info-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin: 30rpx;
  background: #ccc;
  vertical-align: middle;
}
